<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_silver_nol_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="sudoalgorithm.hukuma.SilverNolCardActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/circle_border"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageViewRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/silvernolcard"
            />

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/nfclogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nfclogo"
        android:layout_margin="20dp"
        />


</LinearLayout>
